{
  "name": "fastify-server",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "scripts": {
    "test": "cross-env NODE_ENV=development riteway -r ts-node/register/transpile-only __test__/**/*.test.ts | tap-nirvana",
    "cov": "cross-env NODE_ENV=development nyc --reporter=html --reporter=text-summary npm run test",
    "stage:dev": "cross-env NODE_ENV=development fastify start -a 0.0.0.0 --port=3001 -l info -P dist/app.js",
    "stage:prod": "cross-env NODE_ENV=staging fastify start -a 0.0.0.0 --port=3001 --options -l info -P app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "dev:start": "cross-env NODE_ENV=development fastify start --port 3001 --ignore-watch=.ts$ -w -l info -P dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.6.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/sensible": "^5.1.1",
    "@fastify/static": "^6.5.1",
    "@sinclair/typebox": "^0.25.10",
    "argon2": "^0.30.2",
    "cross-env": "^7.0.3",
    "fastify": "^4.10.2",
    "fastify-cli": "^5.6.0",
    "fastify-plugin": "^4.3.0",
    "nodemailer": "^6.7.7"
  },
  "devDependencies": {
    "@types/fs-ext": "^2.0.0",
    "@types/node": "^17.0.8",
    "@types/nodemailer": "^6.4.4",
    "@types/tap": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "fastify-tsconfig": "^1.0.1",
    "fs-ext": "^2.0.0",
    "nyc": "^15.1.0",
    "riteway": "^6.3.1",
    "tap-nirvana": "^1.1.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.3"
  }
}
